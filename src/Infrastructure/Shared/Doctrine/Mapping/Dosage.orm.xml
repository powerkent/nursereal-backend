<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Nursery\Domain\Nursery\Model\Dosage" table="dosage">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="dose" />

        <field name="dosingDate" type="time" nullable="true" />

        <many-to-one field="treatment" target-entity="Nursery\Domain\Nursery\Model\Treatment" inversed-by="dosages">
            <join-column name="treatment_id" referenced-column-name="id" nullable="true" on-delete="CASCADE"/>
        </many-to-one>
    </entity>
</doctrine-mapping>