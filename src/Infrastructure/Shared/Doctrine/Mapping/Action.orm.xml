<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Nursery\Domain\Shared\Model\Action" table="action" inheritance-type="JOINED">
        <discriminator-column name="type"  type="string"/>
        <discriminator-map>
            <discriminator-mapping value="rest" class="Nursery\Domain\Shared\Model\Action\Rest"/>
            <discriminator-mapping value="care" class="Nursery\Domain\Shared\Model\Action\Care"/>
            <discriminator-mapping value="diaper" class="Nursery\Domain\Shared\Model\Action\Diaper"/>
            <discriminator-mapping value="treatment" class="Nursery\Domain\Shared\Model\Action\Treatment"/>
            <discriminator-mapping value="activity" class="Nursery\Domain\Shared\Model\Action\Activity"/>
        </discriminator-map>

        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="uuid" type="uuid" unique="true" />

        <field name="comment" nullable="true" />

        <field name="createdAt" type="datetime" />

        <many-to-many field="children" target-entity="Nursery\Domain\Nursery\Model\Child" mapped-by="activities"/>
    </entity>
</doctrine-mapping>