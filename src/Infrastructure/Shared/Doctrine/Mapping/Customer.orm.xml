<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Nursery\Domain\Shared\Model\Customer" table="customer">
        <id name="id" type="integer">
            <generator />
        </id>

        <field name="uuid" type="uuid" unique="true" />

        <field name="firstname" length="320" />

        <field name="lastname" length="320" />

        <field name="email" length="320" />

        <field name="password" length="320" />

        <field name="roles" type="json" />

        <field name="phoneNumber" type="integer" length="10" />

        <many-to-many field="children" target-entity="Nursery\Domain\Shared\Model\Child" fetch="LAZY" inversed-by="customers" orphan-removal="false">
            <join-table name="customer_child">
                <join-columns>
                    <join-column name="customer_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="child_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
            <cascade>
                <cascade-persist />
            </cascade>
        </many-to-many>

        <field name="createdAt" type="datetime" />

        <field name="updatedAt" type="datetime" nullable="true" />
    </entity>
</doctrine-mapping>